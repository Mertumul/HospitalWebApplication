@{
    ViewData["Title"] = "Selected Department";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SelectedDepartment))
{
    <p>@ViewBag.SelectedDepartment</p>
}
else
{
    <p>No department selected.</p>
}

<p>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</p>
