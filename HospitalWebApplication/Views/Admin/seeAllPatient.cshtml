@using HospitalWebApplication.Areas.Identity.Data
@model List<ApplicationUser>

<h1>Patients List</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Address</th>
            <th>DOB</th>
            <th>Specialist</th>
            <th>Is Doctor</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.Gender</td>
                <td>@patient.Address</td>
                <td>@patient.DOB.ToShortDateString()</td>
                <td>@patient.Specialist</td>
                <td>@patient.IsDoctor</td>
                <td>@patient.Email</td>
            </tr>
        }
    </tbody>
</table>
